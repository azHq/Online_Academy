<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_margin="10dp"
    android:elevation="5dp"
    app:cardElevation="2dp"
    app:cardBackgroundColor="#FFFFFF"
    app:cardCornerRadius="10dp"
    android:layout_height="145dp">


    <LinearLayout
        android:weightSum="3"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="143dp">
        <TextView
            android:id="@+id/topic_name"
            android:layout_weight=".8"
            android:gravity="center"
            android:textColor="@color/coffe"
            android:text="No Topic"
            android:layout_width="match_parent"
            android:layout_height="0dp">
        </TextView>
        <View
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="#B9727171"
            android:layout_width="match_parent"
            android:layout_height=".4dp">
        </View>
        <LinearLayout
            android:layout_marginTop="3dp"
            android:id="@+id/view_profile"
            android:weightSum="3"
            android:layout_weight="2.2"
            android:padding="3dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp">

            <LinearLayout
                android:layout_weight="3"
                android:layout_width="0dp"
                android:orientation="horizontal"
                android:weightSum="5"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_weight="1"
                    android:weightSum="2"
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="match_parent">
                    <TextView
                        android:layout_weight="1"
                        android:text="Exam Name"
                        android:textColor="#1830AA"
                        android:textSize="14sp"
                        android:gravity="center"
                        android:clickable="false"
                        android:fontFamily="serif"
                        android:layout_width="match_parent"
                        android:layout_height="0dp">
                    </TextView>
                    <View
                        android:layout_margin="3dp"
                        android:layout_width="match_parent"
                        android:background="#99DBD3D3"
                        android:layout_height="1sp">
                    </View>
                    <TextView
                        android:id="@+id/exam_name"
                        android:layout_weight="1"
                        android:text="Eight"
                        android:gravity="center"
                        android:textSize="12sp"
                        android:textColor="@color/coffe"
                        android:layout_marginBottom="1dp"
                        android:layout_width="match_parent"
                        android:singleLine="true"
                        android:fontFamily="serif"
                        android:ellipsize="marquee"
                        android:marqueeRepeatLimit="marquee_forever"
                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        android:clickable="false"
                        android:layout_height="0dp">
                    </TextView>
                </LinearLayout>

                <View
                    android:layout_margin="4dp"
                    android:layout_width="1sp"
                    android:background="#99DBD3D3"
                    android:layout_height="match_parent">
                </View>

                <LinearLayout
                    android:layout_weight="1"
                    android:weightSum="2"
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="match_parent">
                    <TextView
                        android:layout_weight="1"
                        android:text="Exam Type"
                        android:textColor="#1830AA"
                        android:fontFamily="serif"
                        android:gravity="center"
                        android:clickable="false"
                        android:layout_width="match_parent"
                        android:layout_height="0dp">
                    </TextView>
                    <View
                        android:layout_margin="3dp"
                        android:layout_width="match_parent"
                        android:background="#99DBD3D3"
                        android:layout_height="1sp">
                    </View>
                    <TextView
                        android:id="@+id/exam_type"
                        android:layout_weight="1"
                        android:text="Amir Hossain"
                        android:gravity="center"
                        android:textSize="12sp"
                        android:textColor="@color/coffe"
                        android:layout_marginBottom="1dp"
                        android:layout_width="match_parent"
                        android:singleLine="true"
                        android:ellipsize="marquee"
                        android:marqueeRepeatLimit="marquee_forever"
                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        android:clickable="false"
                        android:layout_height="0dp"/>
                </LinearLayout>

                <View
                    android:layout_margin="4dp"
                    android:layout_width="1sp"
                    android:background="#99DBD3D3"
                    android:layout_height="match_parent">
                </View>

                <LinearLayout
                    android:layout_weight="1"
                    android:weightSum="2"
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="match_parent">
                    <TextView
                        android:layout_weight="1"
                        android:text="Subject Name"
                        android:textColor="#1830AA"
                        android:fontFamily="serif"
                        android:gravity="center"
                        android:clickable="false"
                        android:layout_width="match_parent"
                        android:layout_height="0dp">
                    </TextView>
                    <View
                        android:layout_margin="3dp"
                        android:layout_width="match_parent"
                        android:background="#99DBD3D3"
                        android:layout_height="1sp">
                    </View>
                    <TextView
                        android:id="@+id/subject_name"
                        android:layout_weight="1"
                        android:text="Bangla"
                        android:gravity="center"
                        android:textSize="12sp"
                        android:textColor="@color/coffe"
                        android:layout_marginBottom="1dp"
                        android:layout_width="match_parent"
                        android:singleLine="true"
                        android:ellipsize="marquee"
                        android:marqueeRepeatLimit="marquee_forever"
                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        android:clickable="false"
                        android:layout_height="0dp"/>
                </LinearLayout>

                <View
                    android:layout_margin="4dp"
                    android:layout_width="1sp"
                    android:background="#99DBD3D3"
                    android:layout_height="match_parent">
                </View>

                <LinearLayout
                    android:layout_weight="1"
                    android:weightSum="2"
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="match_parent">
                    <TextView
                        android:layout_weight="1"
                        android:text="Date"
                        android:textColor="#1830AA"
                        android:fontFamily="serif"
                        android:gravity="center"
                        android:clickable="false"
                        android:layout_width="match_parent"
                        android:layout_height="0dp">
                    </TextView>
                    <View
                        android:layout_margin="3dp"
                        android:layout_width="match_parent"
                        android:background="#99DBD3D3"
                        android:layout_height="1sp">
                    </View>
                    <TextView
                        android:id="@+id/date"
                        android:layout_weight="1"
                        android:text="Sunday"
                        android:gravity="center"
                        android:textSize="12sp"
                        android:textColor="@color/coffe"
                        android:layout_marginBottom="1dp"
                        android:layout_width="match_parent"
                        android:singleLine="true"
                        android:ellipsize="marquee"
                        android:marqueeRepeatLimit="marquee_forever"
                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        android:clickable="false"
                        android:layout_height="0dp"/>
                </LinearLayout>

                <View
                    android:layout_margin="4dp"
                    android:layout_width="1sp"
                    android:background="#99DBD3D3"
                    android:layout_height="match_parent">
                </View>

                <LinearLayout
                    android:layout_weight="1"
                    android:weightSum="2"
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="match_parent">
                    <TextView
                        android:layout_weight="1"
                        android:text="Marks"
                        android:textColor="#1830AA"
                        android:fontFamily="serif"
                        android:gravity="center"
                        android:clickable="false"
                        android:layout_width="match_parent"
                        android:layout_height="0dp">
                    </TextView>
                    <View
                        android:layout_margin="3dp"
                        android:layout_width="match_parent"
                        android:background="#99DBD3D3"
                        android:layout_height="1sp">
                    </View>
                    <TextView
                        android:id="@+id/marks"
                        android:layout_weight="1"
                        android:text="10"
                        android:gravity="center"
                        android:textSize="12sp"
                        android:textColor="@color/coffe"
                        android:layout_marginBottom="1dp"
                        android:layout_width="match_parent"
                        android:singleLine="true"
                        android:ellipsize="marquee"
                        android:marqueeRepeatLimit="marquee_forever"
                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        android:clickable="false"
                        android:layout_height="0dp"/>
                </LinearLayout>




            </LinearLayout>

        </LinearLayout>
    </LinearLayout>


</androidx.cardview.widget.CardView>