<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="350dp"
    android:weightSum="4"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/student_id"
        android:gravity="center"
        android:singleLine="true"
        android:ellipsize="marquee"
        android:marqueeRepeatLimit="marquee_forever"
        android:textSize="@dimen/table_body_text_size"
        android:textColor="@color/table_body_text_color"
        android:textAppearance="@style/table_body_text_style"
        android:layout_width="0dp"
        android:layout_weight=".9"
        android:background="@drawable/table_cell"
        android:layout_height="25dp">
    </TextView>
    <TextView
        android:id="@+id/student_name"
        android:gravity="center"
        android:singleLine="true"
        android:ellipsize="marquee"
        android:marqueeRepeatLimit="marquee_forever"
        android:textSize="@dimen/table_body_text_size"
        android:textColor="@color/table_body_text_color"
        android:textAppearance="@style/table_body_text_style"
        android:layout_width="0dp"
        android:layout_weight="1.3"
        android:background="@drawable/table_cell"
        android:layout_height="25dp">
    </TextView>
    <TextView
        android:id="@+id/subject_name"
        android:gravity="center"
        android:singleLine="true"
        android:ellipsize="marquee"
        android:marqueeRepeatLimit="marquee_forever"
        android:textSize="@dimen/table_body_text_size"
        android:textColor="@color/table_body_text_color"
        android:textAppearance="@style/table_body_text_style"
        android:layout_width="0dp"
        android:layout_weight=".9"
        android:background="@drawable/table_cell"
        android:layout_height="25dp">
    </TextView>
    <TextView
        android:id="@+id/exam_name"
        android:gravity="center"
        android:singleLine="true"
        android:ellipsize="marquee"
        android:marqueeRepeatLimit="marquee_forever"
        android:textSize="@dimen/table_body_text_size"
        android:textColor="@color/table_body_text_color"
        android:textAppearance="@style/table_body_text_style"
        android:layout_width="0dp"
        android:layout_weight=".9"
        android:background="@drawable/table_cell"
        android:layout_height="25dp">
    </TextView>

</LinearLayout>