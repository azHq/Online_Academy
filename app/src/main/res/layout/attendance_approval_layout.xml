<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_margin="10dp"
    android:elevation="10dp"
    app:cardElevation="1dp"
    app:cardBackgroundColor="#FFFFFF"
    app:cardCornerRadius="10dp"
    android:layout_height="wrap_content">


    <LinearLayout
        android:id="@+id/view_profile"
        android:weightSum="4"
        android:padding="3dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/title"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:textSize="15sp"
            android:textColor="@color/coffe"
            android:text="Md.Aminul Islam (ID: 2dfgs3) Gives Your Class Attendance"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="wrap_content">
        </TextView>
        <TextView
            android:id="@+id/date"
            android:gravity="center"
            android:textSize="15sp"
            android:layout_marginTop="10dp"
            android:textColor="@color/coffe"
            android:text="Date: 12.04.2020"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="wrap_content">
        </TextView>
        <LinearLayout
            android:layout_weight="2"
            android:gravity="center"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="45dp">

            <Button
                android:id="@+id/cancel"
                android:text="Cancel"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:backgroundTint="#632704"
                android:background="@drawable/edit_back3"
                android:layout_marginEnd="30dp"
                android:layout_width="100dp"
                android:layout_height="30dp">
            </Button>
            <Button
                android:id="@+id/approve"
                android:text="Approve"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:backgroundTint="#1C035E"
                android:background="@drawable/edit_back3"
                android:layout_marginStart="30dp"
                android:layout_width="100dp"
                android:layout_height="30dp">
            </Button>

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>