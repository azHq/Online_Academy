<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="600dp"
    android:layout_height="30dp">

    <EditText
        android:id="@+id/total"
        android:background="@drawable/table_cell"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:inputType="numberDecimal"
        android:padding="5dp"
        android:imeOptions="flagNoFullscreen"
        android:layout_height="match_parent">
    </EditText>
    <EditText
        android:id="@+id/ht_sub"
        android:layout_width="0dp"
        android:background="@drawable/table_cell"
        android:layout_weight="1"
        android:inputType="numberDecimal"
        android:padding="5dp"
        android:imeOptions="flagNoFullscreen"
        android:layout_height="match_parent">
    </EditText>
    <EditText
        android:id="@+id/ht_obj"
        android:layout_width="0dp"
        android:background="@drawable/table_cell"
        android:layout_weight="1"
        android:inputType="numberDecimal"
        android:padding="5dp"
        android:imeOptions="flagNoFullscreen"
        android:layout_height="match_parent">
    </EditText>
    <EditText
        android:id="@+id/ht_prac"
        android:background="@drawable/table_cell"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:inputType="numberDecimal"
        android:padding="5dp"
        android:imeOptions="flagNoFullscreen"
        android:layout_height="match_parent">
    </EditText>
    <EditText
        android:id="@+id/ob_sub"
        android:layout_width="0dp"
        android:background="@drawable/table_cell"
        android:layout_weight="1"
        android:inputType="numberDecimal"
        android:padding="5dp"
        android:imeOptions="flagNoFullscreen"
        android:layout_height="match_parent">
    </EditText>
    <EditText
        android:id="@+id/ob_obj"
        android:layout_width="0dp"
        android:background="@drawable/table_cell"
        android:layout_weight="1"
        android:inputType="numberDecimal"
        android:padding="5dp"
        android:imeOptions="flagNoFullscreen"
        android:layout_height="match_parent">
    </EditText>
    <EditText
        android:id="@+id/ob_prac"
        android:background="@drawable/table_cell"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:inputType="numberDecimal"
        android:padding="5dp"
        android:imeOptions="flagNoFullscreen"
        android:layout_height="match_parent">
    </EditText>
    <EditText
        android:id="@+id/weight"
        android:layout_width="0dp"
        android:background="@drawable/table_cell"
        android:layout_weight="1"
        android:inputType="numberDecimal"
        android:padding="5dp"
        android:imeOptions="flagNoFullscreen"
        android:layout_height="match_parent">
    </EditText>
</LinearLayout>