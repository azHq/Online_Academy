<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:background="#944304"
        android:text="Create Exam"
        android:textColor="@color/white"
        android:gravity="center"
        android:fontFamily="serif"
        android:textSize="20sp"
        android:layout_height="55dp">

    </TextView>
    <EditText
        android:id="@+id/exam_name"
        android:gravity="left|center_vertical"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/editback2"
        android:textSize="14sp"
        android:hint="Exam Name"
        android:textColorHint="#EE5F5F5F"
        android:paddingStart="10dp"
        android:layout_marginTop="30dp"
        android:textColor="#172266"
        android:padding="5dp"
        android:layout_width="match_parent"
        android:layout_height="50dp">
    </EditText>
    <EditText
        android:id="@+id/marks"
        android:hint="Total Marks"
        android:gravity="left|center_vertical"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/editback2"
        android:textSize="14sp"
        android:paddingStart="10dp"
        android:inputType="numberDecimal"
        android:layout_marginTop="10dp"
        android:textColorHint="#EE5F5F5F"
        android:textColor="#172266"
        android:padding="5dp"
        android:layout_width="match_parent"
        android:layout_height="50dp">
    </EditText>
    <View
        android:layout_marginTop="30dp"
        android:layout_marginLeft="30dp"
        android:background="#A7A1A1"
        android:layout_marginRight="30dp"
        android:layout_width="match_parent"
        android:layout_marginBottom="10dp"
        android:layout_height="1dp">
    </View>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:weightSum="2"
        android:padding="5dp"
        android:layout_height="55dp">
        <Button
            android:id="@+id/no"
            android:background="@drawable/editback2"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_marginRight="16dp"
            android:text="No"
            android:textSize="16sp"
            android:textColor="@color/white"
            android:layout_marginLeft="16dp"
            android:backgroundTint="@color/blue"
            android:layout_height="match_parent">
        </Button>
        <Button
            android:id="@+id/yes"
            android:background="@drawable/editback2"
            android:layout_width="0dp"
            android:layout_marginRight="16dp"
            android:layout_weight="1"
            android:text="Create"
            android:textSize="16sp"
            android:textColor="@color/white"
            android:backgroundTint="#8B2709"
            android:layout_marginLeft="16dp"
            android:layout_height="match_parent">
        </Button>
    </LinearLayout>

</LinearLayout>