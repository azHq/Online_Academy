<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:weightSum="4"
    android:layout_height="match_parent">

    <LinearLayout
        android:background="#F57F17"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="0dp">
        <TextView
            android:gravity="center"
            android:textSize="24sp"
            android:textColor="#FAFAFA"
            android:text="Please Review Your Info.."
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </TextView>
    </LinearLayout>
    <LinearLayout
        android:layout_weight="2"
        android:weightSum="5"
        android:padding="10dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <LinearLayout
            android:layout_weight="1"
            android:weightSum="4"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_weight="1"
                android:text="School Name"
                android:textColor="@color/coffe"
                android:textSize="16sp"
                android:padding="4sp"
                android:gravity="center"
                android:background="@drawable/editback2"
                android:layout_width="0dp"
                android:layout_height="match_parent">

            </TextView>
            <TextView
                android:id="@+id/school_name"
                android:layout_weight="3"
                android:text="School Name"
                android:textColor="@color/coffe"
                android:textSize="14sp"
                android:padding="4sp"
                android:gravity="center"
                android:background="@drawable/editback2"
                android:layout_width="0dp"
                android:layout_height="match_parent">
            </TextView>

        </LinearLayout>
        <LinearLayout
            android:layout_weight="1"
            android:weightSum="4"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_weight="1"
                android:text="Authority Name"
                android:textColor="@color/coffe"
                android:textSize="16sp"
                android:padding="4sp"
                android:gravity="center"
                android:background="@drawable/editback2"
                android:layout_width="0dp"
                android:layout_height="match_parent">

            </TextView>
            <TextView
                android:id="@+id/authority"
                android:layout_weight="3"
                android:text="School Name"
                android:textColor="@color/coffe"
                android:textSize="14sp"
                android:padding="4sp"
                android:gravity="center"
                android:background="@drawable/editback2"
                android:layout_width="0dp"
                android:layout_height="match_parent">
            </TextView>

        </LinearLayout>
        <LinearLayout
            android:layout_weight="1"
            android:weightSum="4"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_weight="1"
                android:text="Authority Type"
                android:textColor="@color/coffe"
                android:textSize="16sp"
                android:padding="4sp"
                android:gravity="center"
                android:background="@drawable/editback2"
                android:layout_width="0dp"
                android:layout_height="match_parent">

            </TextView>
            <TextView
                android:id="@+id/authority_type"
                android:layout_weight="3"
                android:text="School Name"
                android:textColor="@color/coffe"
                android:textSize="14sp"
                android:padding="4sp"
                android:gravity="center"
                android:background="@drawable/editback2"
                android:layout_width="0dp"
                android:layout_height="match_parent">
            </TextView>

        </LinearLayout>
        <LinearLayout
            android:layout_weight="1"
            android:weightSum="4"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_weight="1"
                android:text="Email"
                android:textColor="@color/coffe"
                android:textSize="16sp"
                android:padding="4sp"
                android:gravity="center"
                android:background="@drawable/editback2"
                android:layout_width="0dp"
                android:layout_height="match_parent">

            </TextView>
            <TextView
                android:id="@+id/email"
                android:layout_weight="3"
                android:text="School Name"
                android:textColor="@color/coffe"
                android:textSize="14sp"
                android:padding="4sp"
                android:gravity="center"
                android:background="@drawable/editback2"
                android:layout_width="0dp"
                android:layout_height="match_parent">
            </TextView>

        </LinearLayout>
        <LinearLayout
            android:layout_weight="1"
            android:weightSum="4"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_weight="1"
                android:text="Phone Number"
                android:textColor="@color/coffe"
                android:textSize="16sp"
                android:padding="4sp"
                android:gravity="center"
                android:background="@drawable/editback2"
                android:layout_width="0dp"
                android:layout_height="match_parent">

            </TextView>
            <TextView
                android:id="@+id/phone"
                android:layout_weight="3"
                android:text="School Name"
                android:textColor="@color/coffe"
                android:textSize="14sp"
                android:padding="4sp"
                android:gravity="center"
                android:background="@drawable/editback2"
                android:layout_width="0dp"
                android:layout_height="match_parent">
            </TextView>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_weight=".5"
        android:padding="10dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp">

        <Button
            android:id="@+id/cancel"
            android:layout_weight="1"
            android:layout_marginRight="10dp"
            android:background="@drawable/editback2"
            android:layout_width="match_parent"
            android:backgroundTint="#860C0C"
            android:text="CANCEL"
            android:textColor="#FFFFFF"
            android:layout_height="match_parent">

        </Button>
        <Button
            android:id="@+id/confirm"
            android:layout_marginRight="10dp"
            android:background="@drawable/editback2"
            android:backgroundTint="#142191"
            android:layout_weight="1"
            android:text="CONFIRM"
            android:textColor="#FFFFFF"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </Button>

    </LinearLayout>

</LinearLayout>