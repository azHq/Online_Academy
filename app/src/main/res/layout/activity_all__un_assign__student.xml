<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Authority.All_UnAssign_Student">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_weight="4"
            android:layout_height="0dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:background="#03188B"
                android:gravity="center"
                android:layout_height="60dp">
                <EditText
                    android:layout_margin="10dp"
                    android:padding="8dp"
                    android:textSize="15sp"
                    android:fontFamily="serif"
                    android:hint="Search By Name"
                    android:background="@drawable/edit_back3"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent">
                </EditText>
                <CheckBox
                    android:visibility="visible"
                    android:id="@+id/select_all"
                    android:layout_marginEnd="10dp"
                    android:backgroundTint="@color/white"
                    android:text="All"
                    android:paddingLeft="5dp"
                    android:textSize="14sp"
                    android:buttonTint="@color/white"
                    android:button="@drawable/custom_checkbox"
                    android:textColor="@color/white"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp">
                </CheckBox>
            </LinearLayout>
            <TextView
                android:id="@+id/no_item"
                android:visibility="gone"
                android:text="No Unassigned Students"
                android:gravity="center"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="0dp">
            </TextView>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycle"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="0dp">
            </androidx.recyclerview.widget.RecyclerView>
        </LinearLayout>
        <LinearLayout
            android:background="#79CECECE"
            android:layout_width="match_parent"
            android:layout_height="70dp">
            <Button
                android:id="@+id/add"
                android:layout_margin="10dp"
                android:backgroundTint="#16863B"
                android:text="Add Student"
                android:textColor="#F8F8F6"
                android:background="@drawable/editback2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            </Button>
        </LinearLayout>

    </LinearLayout>


</LinearLayout>