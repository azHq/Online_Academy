<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#5C1515"
    android:orientation="vertical"
    android:weightSum="4"
    android:fitsSystemWindows="true"
    tools:context=".Authority.Student_Fees">
    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary">
            <TextView
                android:textSize="18sp"
                android:fontFamily="serif"
                android:textColor="@color/white"
                android:gravity="center_vertical"
                android:text="Student Fee"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            </TextView>

        </androidx.appcompat.widget.Toolbar>

    </com.google.android.material.appbar.AppBarLayout>

    <LinearLayout
        android:orientation="vertical"
        android:padding="20dp"
        android:layout_width="match_parent"
        android:layout_height="300dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="15dp"
            android:textColorHint="#1D5A8F"
            android:layout_weight="1"
            android:background="@drawable/edit_back3"
            android:orientation="horizontal">

            <Spinner
                android:id="@+id/class_name"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:background="@android:color/transparent"
                android:gravity="center"
                android:spinnerMode="dropdown" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:layout_marginRight="4dp"
                android:src="@drawable/ic_arrow_drop_down_black_24dp" />

        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="20dp"
            android:textColorHint="#1D5A8F"
            android:layout_weight="1"
            android:background="@drawable/edit_back3"
            android:orientation="horizontal">

            <Spinner
                android:id="@+id/student_name"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:background="@android:color/transparent"
                android:gravity="center"
                android:spinnerMode="dropdown" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:layout_marginRight="4dp"
                android:src="@drawable/ic_arrow_drop_down_black_24dp" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="20dp"
            android:textColorHint="#1D5A8F"
            android:layout_weight="1"
            android:background="@drawable/edit_back3"
            android:orientation="horizontal">

            <Spinner
                android:id="@+id/fee_type"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:background="@android:color/transparent"
                android:gravity="center"
                android:spinnerMode="dropdown" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:layout_marginRight="4dp"
                android:src="@drawable/ic_arrow_drop_down_black_24dp" />

        </RelativeLayout>


    </LinearLayout>

    <EditText
        android:id="@+id/amount"
        android:background="@drawable/edit_back3"
        android:layout_width="match_parent"
        android:drawableLeft="@drawable/dollar"
        android:textColor="#8A5804"
        android:textColorHint="#8A5804"
        android:drawableTint="#8A5804"
        android:inputType="numberDecimal"
        android:padding="10dp"
        android:layout_margin="20dp"
        android:hint="amount"
        android:layout_height="60dp">
    </EditText>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <Button
            android:layout_gravity="bottom"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:backgroundTint="#68DFD3D3"
            android:layout_marginBottom="4dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight=".3"
            android:background="@drawable/edit_back3"
            android:onClick="onSubmit"
            android:text="SUBMIT"
            android:textColor="#FFFFFF"
            android:textSize="18sp">
        </Button>
    </LinearLayout>


</LinearLayout>