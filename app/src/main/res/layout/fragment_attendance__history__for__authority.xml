<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Authority.All_Students_For_Attendance_History">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="100dp">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:orientation="horizontal"
                    android:weightSum="3"
                    android:layout_width="match_parent"
                    android:layout_height="50dp">
                    <LinearLayout
                        android:background="#D2852506"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:layout_width="0dp"
                        android:layout_height="match_parent">
                        <Spinner
                            android:id="@+id/medium"
                            android:layout_gravity="center_horizontal"
                            android:backgroundTint="@color/white"
                            android:layout_width="wrap_content"
                            android:popupBackground="@color/coffe"
                            android:dropDownVerticalOffset="50dp"
                            android:layout_height="match_parent">
                        </Spinner>
                    </LinearLayout>
                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent">
                    </View>
                    <LinearLayout
                        android:background="#D2852506"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:layout_width="0dp"
                        android:layout_height="match_parent">
                        <Spinner
                            android:id="@+id/class_name"
                            android:layout_gravity="center_horizontal"
                            android:backgroundTint="@color/white"
                            android:dropDownVerticalOffset="50dp"
                            android:popupBackground="@color/coffe"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent">
                        </Spinner>
                    </LinearLayout>
                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent">
                    </View>
                    <LinearLayout
                        android:background="#D2852506"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:layout_width="0dp"
                        android:layout_height="match_parent">
                        <Spinner
                            android:id="@+id/section"
                            android:layout_gravity="center_horizontal"
                            android:backgroundTint="@color/white"
                            android:layout_width="wrap_content"
                            android:dropDownVerticalOffset="50dp"
                            android:popupBackground="@color/coffe"
                            android:spinnerMode="dropdown"
                            android:dropDownSelector="@color/white"
                            android:layout_height="match_parent">
                        </Spinner>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:background="#E2310252"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:weightSum="2"
                    android:layout_width="match_parent"
                    android:layout_height="50dp">
                   <TextView
                       android:id="@+id/date"
                       android:text="12.12.2020"
                       android:gravity="center"
                       android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                       android:textSize="16sp"
                       android:layout_weight="1"
                       android:textColor="@color/white"
                       android:layout_width="match_parent"
                       android:layout_height="match_parent">
                   </TextView>

                    <Button
                        android:id="@+id/choose_date"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:textColor="@color/white"
                        android:background="@drawable/editback2"
                        android:text="Choose Date"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body1">

                    </Button>
                </LinearLayout>
            </LinearLayout>

        </androidx.cardview.widget.CardView>
        <LinearLayout
            android:layout_width="match_parent"
            android:weightSum="2"
            android:layout_weight=".8"
            android:orientation="horizontal"
            android:layout_height="0dp">
            <TextView
                android:id="@+id/present_header_text"
                android:text="Present"
                android:gravity="center"
                android:fontFamily="serif"
                android:textSize="17sp"
                android:background="#347C0E"
                android:textColor="@color/white"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent">
            </TextView>
            <TextView
                android:text="Absent"
                android:id="@+id/absent_header_text"
                android:background="#702406"
                android:gravity="center"
                android:textSize="17sp"
                android:fontFamily="serif"
                android:textColor="@color/white"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent">
            </TextView>

        </LinearLayout>
        <LinearLayout
            android:weightSum="2"
            android:layout_weight="8.1"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp">
            <TextView
                android:visibility="gone"
                android:id="@+id/no_item"
                android:gravity="center"
                android:text="Attendance Still Not Uploaded"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            </TextView>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycle1"
                android:layout_width="0dp"
                android:layout_margin="3dp"
                android:layout_weight="1"
                android:layout_height="match_parent">

            </androidx.recyclerview.widget.RecyclerView>
            <View
                android:background="#499908"
                android:layout_width="1dp"
                android:layout_height="match_parent">
            </View>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycle2"
                android:layout_margin="3dp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent">

            </androidx.recyclerview.widget.RecyclerView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <Button
                android:id="@+id/calendar"
                android:background="#036D17"
                android:fontFamily="serif"
                android:textSize="13sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:text="See Calendar View"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            </Button>
        </LinearLayout>

    </LinearLayout>

</FrameLayout>