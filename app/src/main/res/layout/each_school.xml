<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_marginBottom="20dp"
    android:id="@+id/view_profile"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">



    <androidx.cardview.widget.CardView
        app:cardElevation="2dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        app:cardCornerRadius="20dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_marginBottom="10dp"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/school_image"
                android:layout_width="match_parent"
                android:scaleType="fitXY"
                android:src="@drawable/teacher_panel_header"
                android:layout_height="200dp">
            </ImageView>
            <LinearLayout
                android:weightSum="5"
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:padding="5dp"
                android:layout_marginStart="10dp"
                android:background="@drawable/editback4"
                android:layout_height="200dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:weightSum="2"
                    android:orientation="horizontal"
                    android:layout_height="0dp">
                    <TextView
                        android:text="School Id : "
                        android:textSize="14sp"
                        android:fontFamily="serif"
                        android:textStyle="bold"
                        android:textColor="#1E7496"
                        android:gravity="left|center_vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent">
                    </TextView>
                    <TextView
                        android:id="@+id/id"
                        android:text="9wusjjhsj"
                        android:textSize="14sp"
                        android:fontFamily="serif"
                        android:textStyle="bold"
                        android:textColor="#1E7496"
                        android:gravity="left|center_vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent">
                    </TextView>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:weightSum="2"
                    android:orientation="horizontal"
                    android:layout_height="0dp">
                    <TextView
                        android:text="School Name : "
                        android:textSize="14sp"
                        android:fontFamily="serif"
                        android:textStyle="bold"
                        android:textColor="#1E7496"
                        android:gravity="left|center_vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent">
                    </TextView>
                    <TextView
                        android:id="@id/school_name"
                        android:text="Aramabgh High School"
                        android:textSize="14sp"
                        android:fontFamily="serif"
                        android:textStyle="bold"
                        android:textColor="#1E7496"
                        android:gravity="left|center_vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent">
                    </TextView>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:weightSum="2"
                    android:orientation="horizontal"
                    android:layout_height="0dp">
                    <TextView

                        android:text="Authority Id : "
                        android:textSize="14sp"
                        android:fontFamily="serif"
                        android:textStyle="bold"
                        android:textColor="#1E7496"
                        android:gravity="left|center_vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent">
                    </TextView>
                    <TextView
                        android:id="@+id/authority_id"
                        android:text="sjkskkaka"
                        android:textSize="14sp"
                        android:fontFamily="serif"
                        android:textStyle="bold"
                        android:textColor="#1E7496"
                        android:gravity="left|center_vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent">
                    </TextView>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:weightSum="2"
                    android:orientation="horizontal"
                    android:layout_height="0dp">
                    <TextView
                        android:text="Authority Name : "
                        android:textSize="14sp"
                        android:fontFamily="serif"
                        android:textStyle="bold"
                        android:textColor="#1E7496"
                        android:gravity="left|center_vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent">
                    </TextView>
                    <TextView
                        android:id="@+id/authority_name"
                        android:textSize="14sp"
                        android:fontFamily="serif"
                        android:textStyle="bold"
                        android:textColor="#1E7496"
                        android:text="School Id : "
                        android:gravity="left|center_vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent">
                    </TextView>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:weightSum="3"
                    android:orientation="horizontal"
                    android:layout_height="0dp">
                    <TextView
                        android:text="Account Status : "
                        android:textSize="14sp"
                        android:fontFamily="serif"
                        android:textStyle="bold"
                        android:textColor="#1E7496"
                        android:gravity="left|center_vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent">
                    </TextView>
                    <TextView
                        android:id="@+id/status"
                        android:text="Active"
                        android:textSize="14sp"
                        android:fontFamily="serif"
                        android:textStyle="bold"
                        android:textColor="#1E7496"
                        android:layout_marginStart="5dp"
                        android:gravity="left|center_vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent">
                    </TextView>
                  <androidx.appcompat.widget.SwitchCompat
                      android:id="@+id/swith"
                      android:layout_marginLeft="10dp"
                      android:layout_width="wrap_content"
                      app:track="@drawable/switch_style_track"
                      android:thumb="@drawable/switch_style"
                      android:layout_height="20dp">
                  </androidx.appcompat.widget.SwitchCompat>

                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>



</LinearLayout>