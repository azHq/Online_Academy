<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/result_back"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".Account_Deactive_Message">

    <TextView
        android:text="Your account has been De-activated.Please complete your payment to active your account."
        android:layout_width="match_parent"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:layout_height="80dp">
    </TextView>
    <Button
        android:id="@+id/payemt"
        android:layout_width="match_parent"
        android:textColor="@color/white"
        android:backgroundTint="#04555C"
        android:background="@drawable/editback2"
        android:text="Click Here To Complete Your Pyament"
        android:layout_margin="10dp"
        android:layout_height="70dp">
    </Button>

</LinearLayout>