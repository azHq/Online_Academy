<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="3.5"
    android:orientation="vertical"
    tools:context=".Admin.Add_School">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_weight="1.2"
        android:weightSum="5"
        android:layout_height="0dp">
        <Button
            android:layout_width="match_parent"
            android:background="@drawable/logo"
            android:layout_weight="4"
            android:layout_height="0dp">

        </Button>
        <TextView
            android:id="@id/error"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:textColor="#FFFFFF"
            android:background="#3E2723"
            android:textSize="20sp"
            android:text="Add New School">
        </TextView>


    </LinearLayout>
    <LinearLayout
        android:layout_weight="2"
        android:weightSum="5"
        android:orientation="vertical"
        android:padding="20dp"
        android:layout_width="match_parent"
        android:layout_height="0dp">

        <EditText
            android:id="@+id/school"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="0dp"
            android:drawableLeft="@drawable/ic_school_black_24dp"
            android:background="@drawable/editback2"
            android:drawablePadding="6dp"
            android:textColorHint="#1D5A8F"
            android:inputType="textPersonName"
            android:fontFamily="serif"
            android:gravity="center_vertical"
            android:hint="School Name"
            android:paddingStart="6dp"
            android:layout_weight="1"
            android:singleLine="true"
            android:textColor="@color/dark_sky"
            android:textSize="18sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/authority"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="20dp"
            android:drawableLeft="@drawable/ic_fingerprint_black_24dp"
            android:background="@drawable/editback2"
            android:drawablePadding="6dp"
            android:textColorHint="#1D5A8F"
            android:inputType="textPersonName"
            android:fontFamily="serif"
            android:gravity="center_vertical"
            android:hint="Authority Name"
            android:paddingStart="6dp"
            android:layout_weight="1"
            android:singleLine="true"
            android:textColor="@color/dark_sky"
            android:textSize="18sp"
            android:textStyle="bold" />




        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="20dp"
            android:textColorHint="#1D5A8F"
            android:layout_weight="1"
            android:background="@drawable/editback2"
            android:orientation="horizontal">

            <Spinner
                android:id="@+id/user_type"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:background="@android:color/transparent"
                android:gravity="center"
                android:layout_marginLeft="5dp"
                android:spinnerMode="dropdown" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:layout_marginRight="4dp"
                android:src="@drawable/ic_arrow_drop_down_black_24dp" />

        </RelativeLayout>



        <EditText
            android:layout_weight="1"
            android:id="@+id/email"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="20dp"
            android:textColorHint="#1D5A8F"
            android:background="@drawable/editback2"
            android:drawableLeft="@drawable/email"
            android:drawablePadding="3dp"
            android:fontFamily="serif"
            android:gravity="center_vertical"
            android:inputType="textEmailAddress"
            android:hint="Email"
            android:singleLine="true"
            android:paddingStart="6dp"
            android:textColor="@color/dark_sky"
            android:textSize="18sp"
            android:textStyle="bold" />



        <EditText
            android:layout_weight="1"
            android:id="@+id/phone"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="20dp"
            android:textColorHint="#1D5A8F"
            android:background="@drawable/editback2"
            android:drawableLeft="@drawable/ic_phone_android_black_24dp"
            android:drawablePadding="3dp"
            android:fontFamily="serif"
            android:gravity="center_vertical"
            android:inputType="numberDecimal"
            android:hint="Phone Number"
            android:singleLine="true"
            android:paddingStart="6dp"
            android:textColor="@color/dark_sky"
            android:textSize="18sp"
            android:textStyle="bold" />



    </LinearLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="4dp"
        android:layout_weight=".3"
        android:background="@drawable/signupbutton"
        android:onClick="onSubmit"
        android:text="SUBMIT"
        android:textColor="#FFFFFF"
        android:textSize="18sp"></Button>



</LinearLayout>