<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="3.5"
    android:orientation="vertical"
    tools:context=".Authority.Add_New_Student">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_weight="1.4"
        android:weightSum="5"
        android:layout_height="0dp">
        <ImageView
            android:layout_width="match_parent"
            android:background="@drawable/logo"
            android:layout_weight="3.3"
            android:layout_height="0dp">

        </ImageView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_weight="1.7"
            android:orientation="vertical"
            android:layout_height="0dp">

            <RelativeLayout
                android:layout_weight="1"
                android:orientation="horizontal"
                android:background="#3E2723"
                android:layout_width="match_parent"
                android:layout_height="0dp">
                <TextView
                    android:id="@id/error"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_centerHorizontal="true"
                    android:background="#3E2723"
                    android:gravity="center"
                    android:text="Add New Student"
                    android:textColor="#FFFFFF"
                    android:textSize="20sp">
                </TextView>


            </RelativeLayout>
            <RelativeLayout
                android:layout_weight="1"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="0dp">
                <Button
                    android:id="@+id/previous"
                    android:layout_width="wrap_content"
                    android:text="Add From Previous"
                    android:padding="10dp"
                    android:layout_marginEnd="3dp"
                    android:textColor="@color/white"
                    android:layout_centerVertical="true"
                    android:background="@drawable/border_back"
                    android:layout_alignParentStart="true"
                    android:layout_height="50dp">
                </Button>

                <Button
                    android:id="@+id/upload_pdf"
                    android:layout_width="wrap_content"
                    android:text="Upload Pdf"
                    android:padding="10dp"
                    android:layout_marginEnd="3dp"
                    android:textColor="@color/white"
                    android:layout_centerVertical="true"
                    android:background="@drawable/border_back"
                    android:layout_alignParentEnd="true"
                    android:layout_height="50dp">
                </Button>


            </RelativeLayout>

        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_weight="1.8"
        android:weightSum="4"
        android:orientation="vertical"
        android:padding="20dp"
        android:layout_width="match_parent"
        android:layout_height="0dp">


        <EditText
            android:id="@+id/id"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="0dp"
            android:drawableLeft="@drawable/id"
            android:background="@drawable/editback2"
            android:drawablePadding="6dp"
            android:textColorHint="#1D5A8F"
            android:inputType="textPersonName"
            android:fontFamily="serif"
            android:gravity="center_vertical"
            android:hint="Student ID"
            android:paddingStart="6dp"
            android:layout_weight="1"
            android:singleLine="true"
            android:textColor="@color/dark_sky"
            android:textSize="18sp"
            android:textStyle="bold" />


        <EditText
            android:id="@+id/school"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="20dp"
            android:drawableLeft="@drawable/ic_school_black_24dp"
            android:background="@drawable/editback2"
            android:drawablePadding="6dp"
            android:textColorHint="#1D5A8F"
            android:inputType="textPersonName"
            android:fontFamily="serif"
            android:gravity="center_vertical"
            android:hint="Student Name"
            android:paddingStart="6dp"
            android:layout_weight="1"
            android:singleLine="true"
            android:textColor="@color/dark_sky"
            android:textSize="18sp"
            android:textStyle="bold" />





        <EditText
            android:layout_weight="1"
            android:id="@+id/email"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="20dp"
            android:textColorHint="#1D5A8F"
            android:background="@drawable/editback2"
            android:drawableLeft="@drawable/email"
            android:drawablePadding="3dp"
            android:fontFamily="serif"
            android:gravity="center_vertical"
            android:inputType="textEmailAddress"
            android:hint="Email"
            android:singleLine="true"
            android:paddingStart="6dp"
            android:textColor="@color/dark_sky"
            android:textSize="18sp"
            android:textStyle="bold" />



        <EditText
            android:layout_weight="1"
            android:id="@+id/phone"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="20dp"
            android:textColorHint="#1D5A8F"
            android:background="@drawable/editback2"
            android:drawableLeft="@drawable/ic_phone_android_black_24dp"
            android:drawablePadding="3dp"
            android:fontFamily="serif"
            android:gravity="center_vertical"
            android:inputType="numberDecimal"
            android:hint="Phone Number"
            android:singleLine="true"
            android:paddingStart="6dp"
            android:textColor="@color/dark_sky"
            android:textSize="18sp"
            android:textStyle="bold" />




    </LinearLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="4dp"
        android:layout_weight=".3"
        android:background="@drawable/signupbutton"
        android:onClick="onSubmit"
        android:text="SUBMIT"
        android:textColor="#FFFFFF"
        android:textSize="18sp"></Button>


</LinearLayout>