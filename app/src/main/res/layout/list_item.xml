            android:fontFamily="serif"
            android:textSize="16sp"
            android:paddingLeft="10dp"
            android:layout_margin="5dp"
            android:textColor="@color/white"
            android:gravity="center_vertical"
            android:layout_height="match_parent">
        </TextView>


</LinearLayout>