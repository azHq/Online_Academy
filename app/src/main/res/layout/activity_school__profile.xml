<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Admin.School_Profile">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">



        <androidx.cardview.widget.CardView
            app:cardElevation="2dp"
            app:cardCornerRadius="20dp"
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_marginBottom="10dp"
                android:layout_height="match_parent">
                <ImageView
                    android:id="@+id/school_image"
                    android:layout_width="match_parent"
                    android:scaleType="fitXY"
                    android:src="@drawable/teacher_panel_header"
                    android:layout_height="250dp">
                </ImageView>
                <LinearLayout
                    android:weightSum="8"
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:padding="5dp"
                    android:layout_marginStart="10dp"
                    android:background="@drawable/editback4"
                    android:layout_height="match_parent">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:weightSum="2"
                        android:orientation="horizontal"
                        android:layout_height="0dp">
                        <TextView
                            android:text="School Id : "
                            android:textSize="14sp"
                            android:fontFamily="serif"
                            android:textStyle="bold"
                            android:textColor="#1E7496"
                            android:gravity="left|center_vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent">
                        </TextView>
                        <TextView
                            android:id="@+id/school_id"
                            android:text="9wusjjhsj"
                            android:textSize="14sp"
                            android:fontFamily="serif"
                            android:textStyle="bold"
                            android:textColor="#1E7496"
                            android:gravity="left|center_vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent">
                        </TextView>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:weightSum="2"
                        android:orientation="horizontal"
                        android:layout_height="0dp">
                        <TextView
                            android:text="School Name : "
                            android:textSize="14sp"
                            android:fontFamily="serif"
                            android:textStyle="bold"
                            android:textColor="#1E7496"
                            android:gravity="left|center_vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent">
                        </TextView>
                        <TextView
                            android:id="@id/school_name"
                            android:text="Aramabgh High School"
                            android:textSize="14sp"
                            android:fontFamily="serif"
                            android:textStyle="bold"
                            android:textColor="#1E7496"
                            android:gravity="left|center_vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent">
                        </TextView>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:weightSum="2"
                        android:orientation="horizontal"
                        android:layout_height="0dp">
                        <TextView

                            android:text="Authority Id : "
                            android:textSize="14sp"
                            android:fontFamily="serif"
                            android:textStyle="bold"
                            android:textColor="#1E7496"
                            android:gravity="left|center_vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent">
                        </TextView>
                        <TextView
                            android:id="@+id/authority_id"
                            android:text="sjkskkaka"
                            android:textSize="14sp"
                            android:fontFamily="serif"
                            android:textStyle="bold"
                            android:textColor="#1E7496"
                            android:gravity="left|center_vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent">
                        </TextView>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:weightSum="2"
                        android:orientation="horizontal"
                        android:layout_height="0dp">
                        <TextView
                            android:text="Authority Name : "
                            android:textSize="14sp"
                            android:fontFamily="serif"
                            android:textStyle="bold"
                            android:textColor="#1E7496"
                            android:gravity="left|center_vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent">
                        </TextView>
                        <TextView
                            android:id="@+id/authority_name"
                            android:textSize="14sp"
                            android:fontFamily="serif"
                            android:textStyle="bold"
                            android:textColor="#1E7496"
                            android:text="School Id : "
                            android:gravity="left|center_vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent">
                        </TextView>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:weightSum="2"
                        android:orientation="horizontal"
                        android:layout_height="0dp">
                        <TextView
                            android:text="Email : "
                            android:textSize="14sp"
                            android:fontFamily="serif"
                            android:textStyle="bold"
                            android:textColor="#1E7496"
                            android:gravity="left|center_vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent">
                        </TextView>
                        <TextView
                            android:id="@+id/email"
                            android:textSize="14sp"
                            android:fontFamily="serif"
                            android:textStyle="bold"
                            android:textColor="#1E7496"
                            android:text="School Id : "
                            android:gravity="left|center_vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent">
                        </TextView>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:weightSum="2"
                        android:orientation="horizontal"
                        android:layout_height="0dp">
                        <TextView
                            android:text="Phone Number : "
                            android:textSize="14sp"
                            android:fontFamily="serif"
                            android:textStyle="bold"
                            android:textColor="#1E7496"
                            android:gravity="left|center_vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent">
                        </TextView>
                        <TextView
                            android:id="@+id/phone_number"
                            android:textSize="14sp"
                            android:fontFamily="serif"
                            android:textStyle="bold"
                            android:textColor="#1E7496"
                            android:text="School Id : "
                            android:gravity="left|center_vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent">
                        </TextView>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:weightSum="2"
                        android:orientation="horizontal"
                        android:layout_height="0dp">
                        <TextView
                            android:text="Joining Date : "
                            android:textSize="14sp"
                            android:fontFamily="serif"
                            android:textStyle="bold"
                            android:textColor="#1E7496"
                            android:gravity="left|center_vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent">
                        </TextView>
                        <TextView
                            android:id="@+id/join_date"
                            android:textSize="14sp"
                            android:fontFamily="serif"
                            android:textStyle="bold"
                            android:textColor="#1E7496"
                            android:text="School Id : "
                            android:gravity="left|center_vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent">
                        </TextView>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:weightSum="3"
                        android:orientation="horizontal"
                        android:layout_height="0dp">
                        <TextView
                            android:text="Account Status : "
                            android:textSize="14sp"
                            android:fontFamily="serif"
                            android:textStyle="bold"
                            android:textColor="#1E7496"
                            android:gravity="left|center_vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent">
                        </TextView>
                        <TextView
                            android:id="@+id/status"
                            android:text="Active"
                            android:textSize="14sp"
                            android:fontFamily="serif"
                            android:textStyle="bold"
                            android:textColor="#1E7496"
                            android:layout_marginStart="5dp"
                            android:gravity="left|center_vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent">
                        </TextView>
                        <androidx.appcompat.widget.SwitchCompat
                            android:id="@+id/swith"
                            android:layout_marginLeft="10dp"
                            android:layout_width="wrap_content"
                            app:track="@drawable/switch_style_track"
                            android:thumb="@drawable/switch_style"
                            android:layout_height="20dp">
                        </androidx.appcompat.widget.SwitchCompat>

                    </LinearLayout>
                    <View
                        android:layout_marginTop="20dp"
                        android:background="#B7DBCACA"
                        android:layout_width="match_parent"
                        android:layout_height="1dp">
                    </View>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:weightSum="2"
                        android:paddingRight="5dp"
                        android:orientation="horizontal"
                        android:paddingLeft="5dp"
                        android:layout_height="60dp">
                        <View
                            android:background="#B7DBCACA"
                            android:layout_width="1dp"
                            android:layout_height="match_parent">
                        </View>
                        <LinearLayout
                            android:layout_weight="1"
                            android:gravity="center"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                            <ImageView
                                android:id="@+id/message"
                                android:background="@drawable/messenger"
                                android:layout_width="40dp"
                                android:scaleType="fitXY"
                                android:layout_height="40dp">
                            </ImageView>
                        </LinearLayout>
                        <View
                            android:background="#B7DBCACA"
                            android:layout_width="1dp"
                            android:layout_height="match_parent">
                        </View>
                        <LinearLayout
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:gravity="center"
                            android:layout_height="match_parent">
                            <ImageView
                                android:id="@+id/call"
                                android:background="@drawable/phones"
                                android:layout_width="40dp"
                                android:scaleType="fitXY"
                                android:layout_height="40dp">
                            </ImageView>
                        </LinearLayout>
                        <View
                            android:background="#B7DBCACA"
                            android:layout_width="1dp"
                            android:layout_height="match_parent">
                        </View>

                    </LinearLayout>
                    <View
                        android:background="#B7DBCACA"
                        android:layout_width="match_parent"
                        android:layout_height="1dp">
                    </View>
                </LinearLayout>



            </LinearLayout>

        </androidx.cardview.widget.CardView>



    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>