<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:gravity="center"
                android:textColor="@color/white"
                android:background="#854C07"
                android:textSize="15sp"
                android:text="Evaluation Question Setup"
                android:layout_width="match_parent"
                android:layout_height="50dp">
            </TextView>

            <EditText
                android:textColor="@color/black"
                android:id="@+id/question"
                android:layout_marginStart="10dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="10dp"
                android:hint="Enter Your Question"
                android:padding="10dp"
                android:textColorHint="@color/black"
                android:background="@drawable/editback2"
                android:layout_width="match_parent"
                android:layout_height="70dp">
            </EditText>

            <RelativeLayout
                android:id="@+id/duration_layout"
                android:layout_width="180dp"
                android:layout_margin="10dp"
                android:textColorHint="#1D5A8F"
                android:layout_below="@+id/time"
                android:layout_height="40dp"
                android:background="@drawable/editback2"
                android:orientation="horizontal">

                <Spinner
                    android:id="@+id/num_of_option"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center"
                    android:background="@android:color/transparent"
                    android:gravity="center"
                    android:theme="@style/MySpinner"
                    android:spinnerMode="dropdown" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center"
                    android:layout_marginRight="4dp"
                    android:src="@drawable/ic_arrow_drop_down_black_24dp" />

            </RelativeLayout>

            <LinearLayout
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:id="@+id/option1"
                    android:weightSum="3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <EditText
                        android:textColor="@color/black"
                        android:hint="Text"
                        android:textColorHint="@color/black"
                        android:textSize="12sp"
                        android:padding="10dp"
                        android:id="@+id/text1"
                        android:background="@drawable/editback2"
                        android:layout_width="170dp"
                        android:layout_height="40dp">
                    </EditText>
                    <RelativeLayout
                        android:layout_width="140dp"
                        android:layout_marginLeft="10dp"
                        android:textColorHint="#1D5A8F"
                        android:layout_below="@+id/time"
                        android:layout_height="40dp"
                        android:background="@drawable/editback2"
                        android:orientation="horizontal">

                        <Spinner
                            android:id="@+id/value1"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_centerVertical="true"
                            android:layout_gravity="center"
                            android:background="@android:color/transparent"
                            android:gravity="center"
                            android:theme="@style/MySpinner"
                            android:spinnerMode="dropdown" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_gravity="center"
                            android:layout_marginRight="4dp"
                            android:src="@drawable/ic_arrow_drop_down_black_24dp" />

                    </RelativeLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/option2"
                    android:weightSum="3"
                    android:layout_marginTop="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <EditText
                        android:textColor="@color/black"
                        android:id="@+id/text2"
                        android:hint="Text"
                        android:textColorHint="@color/black"
                        android:textSize="12sp"
                        android:padding="10dp"
                        android:background="@drawable/editback2"
                        android:layout_width="170dp"
                        android:layout_height="40dp">
                    </EditText>
                    <RelativeLayout
                        android:layout_width="140dp"
                        android:layout_marginLeft="10dp"
                        android:textColorHint="#1D5A8F"
                        android:layout_below="@+id/time"
                        android:layout_height="40dp"
                        android:background="@drawable/editback2"
                        android:orientation="horizontal">

                        <Spinner
                            android:id="@+id/value2"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_centerVertical="true"
                            android:layout_gravity="center"
                            android:background="@android:color/transparent"
                            android:gravity="center"
                            android:theme="@style/MySpinner"
                            android:spinnerMode="dropdown" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_gravity="center"
                            android:layout_marginRight="4dp"
                            android:src="@drawable/ic_arrow_drop_down_black_24dp" />

                    </RelativeLayout>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/option3"
                    android:weightSum="3"
                    android:layout_marginTop="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <EditText
                        android:textColor="@color/black"
                        android:id="@+id/text3"
                        android:hint="Text"
                        android:textColorHint="@color/black"
                        android:textSize="12sp"
                        android:padding="10dp"
                        android:background="@drawable/editback2"
                        android:layout_width="170dp"
                        android:layout_height="40dp">
                    </EditText>
                    <RelativeLayout
                        android:layout_width="140dp"
                        android:layout_marginLeft="10dp"
                        android:textColorHint="#1D5A8F"
                        android:layout_below="@+id/time"
                        android:layout_height="40dp"
                        android:background="@drawable/editback2"
                        android:orientation="horizontal">

                        <Spinner
                            android:id="@+id/value3"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_centerVertical="true"
                            android:layout_gravity="center"
                            android:background="@android:color/transparent"
                            android:gravity="center"
                            android:theme="@style/MySpinner"
                            android:spinnerMode="dropdown" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_gravity="center"
                            android:layout_marginRight="4dp"
                            android:src="@drawable/ic_arrow_drop_down_black_24dp" />

                    </RelativeLayout>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/option4"
                    android:weightSum="3"
                    android:layout_marginTop="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <EditText
                        android:textColor="@color/black"
                        android:id="@+id/text4"
                        android:hint="Text"
                        android:textColorHint="@color/black"
                        android:textSize="12sp"
                        android:padding="10dp"
                        android:background="@drawable/editback2"
                        android:layout_width="170dp"
                        android:layout_height="40dp">
                    </EditText>
                    <RelativeLayout
                        android:layout_width="140dp"
                        android:layout_marginLeft="10dp"
                        android:textColorHint="#1D5A8F"
                        android:layout_below="@+id/time"
                        android:layout_height="40dp"
                        android:background="@drawable/editback2"
                        android:orientation="horizontal">

                        <Spinner
                            android:id="@+id/value4"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_centerVertical="true"
                            android:layout_gravity="center"
                            android:background="@android:color/transparent"
                            android:gravity="center"
                            android:theme="@style/MySpinner"
                            android:spinnerMode="dropdown" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_gravity="center"
                            android:layout_marginRight="4dp"
                            android:src="@drawable/ic_arrow_drop_down_black_24dp" />

                    </RelativeLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:gravity="bottom"
                android:layout_marginTop="50dp"
                android:padding="10dp"
                android:layout_alignParentBottom="true"
                android:layout_height="65dp">

                <Button
                    android:layout_weight="1"
                    android:id="@+id/cancel"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/signupbutton"
                    android:text="Cancel"
                    android:textColor="#fbfafa"
                    android:textStyle="bold" />
                <Button
                    android:id="@+id/save"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_marginLeft="50dp"
                    android:layout_gravity="end"
                    android:layout_height="match_parent"
                    android:background="@drawable/signupbutton"
                    android:text="SAVE"
                    android:textColor="#fbfafa"
                    android:textStyle="bold" />

            </LinearLayout>
        </LinearLayout>
    </ScrollView>


</LinearLayout>