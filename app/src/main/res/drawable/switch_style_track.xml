<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_checked="true">
        <shape android:shape="rectangle">
            <corners
                android:radius="50dp">
            </corners>
            <size
                android:width="40dp"
                android:height="20dp">
            </size>
            <stroke
                android:color="#FCF7F7"
                android:width=".5dp">
            </stroke>
            <solid android:color="#C7890F">
            </solid>
        </shape>
    </item>
    <item android:state_checked="false">
        <shape android:shape="rectangle">
            <corners
                android:radius="50dp">
            </corners>
            <size
                android:width="40dp"
                android:height="20dp">
            </size>
            <stroke
                android:color="#FCF7F7"
                android:width=".5dp">
            </stroke>
            <solid android:color="#35045F">
            </solid>
        </shape>
    </item>
</selector>